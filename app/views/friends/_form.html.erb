<%= form_with(model: friend) do |form| %>
  <% if friend.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(friend.errors.count, "error") %> prohibited this friend from being saved:</h2>

      <ul>
        <% friend.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.text_field :first_name , class:"form-control" , placeholder:"first name"%>
    </br>
  </div>

  <div class="field form-group">
    <%= form.text_field :last_name , class:"form-control" , placeholder:"last name"%>
    </br>
  </div>

  <div class="field form-group">
    <%= form.text_field :email , class:"form-control" , placeholder:"@email.com"%>
    </br>
  </div>

  <div class="field form-group">
    <%= form.text_field :phone , class:"form-control" , placeholder:" phone#555 555 555"%>
    </br>
  </div>

  <div class="field form-group">
    <%= form.text_field :twitter , class:"form-control" , placeholder:"twitter" %>
    </br>
  </div>
  
  <%# add friend related to an id %>
  <div class="field form-group">
    <%= form.number_field :user_id, id: :friend_user_id ,type: :hidden , class:"form-control" , value:current_user.id %>
    </br>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-secondary" %>
  </div>
<% end %>
